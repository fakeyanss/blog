// 修改主题样式
@media (min-width: 1200px){
	.col-lg-offset-2 {
    	margin-left: 5%;
	}
	.col-lg-8 {
    	width: 90%;
	}
}
.post-preview > a > .post-title {
    font-size: 1.2em;
}

@media only screen and (min-width: 768px){
	.intro-header .post-heading h1 {
    	text-align: center;
	}
}

article .container .row img {
    position: relative;
    left: 10%;
    margin: 30px auto;
    max-width: 80% !important;
    height: auto;
    display: inline-block;
    box-shadow: 0 0 0 5px #fff, 0 0 15px 0 #000;
}

//修改文章内code样式
code {color:#c7254e;background:#f9f2f4;border:1px solid #d6d6d6;}

//修改文章中图片样式，改为居中
.posts-expand .post-body img {
	margin: 0 auto;
}

// 下载样式
a#download {
	display: inline-block;
	padding: 0 10px;
	color: #000;
	background: transparent;
	border: 2px solid #000;
	border-radius: 2px;
	transition: all .5s ease;
	font-weight: bold;
	&:hover {
		background: #000;
		color: #fff;
	}
}

